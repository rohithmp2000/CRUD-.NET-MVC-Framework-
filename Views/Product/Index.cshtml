@model List<CheckMVC.tblProduct>
@{
    ViewBag.Title = "Index";
}

<h2>List of all Products</h2>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Product Price</th>
        <th>Product Quantity</th>
        <th>Product Image</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.prdt_id</td>
            <td>@i.prdt_name</td>
            <td>@i.prdt_price</td>
            <td>@i.prdt_qty</td>
            <td><img scr="~/content/images/@i.prdt_img" alt="@i.prdt_name" width="100" height="120" /></td>
            <td>@Html.ActionLink("Edit", "Edit", "Product", new { @id = i.prdt_id}, new { htmlAttributes = new { @class = "btn btn-warning" } })</td>
            <td><a href="@Url.Action("Delete", "Product", new { @id = i.prdt_id})" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete @i.prdt_name ?')">Delete</a></td>
        </tr>   
    }
</table>
<a href="@Url.Action("Create","Product")" class="btn btn-primary">Add New Product</a>

